{
    "compilerOptions": {
        "outDir": "./build",
        "module": "commonjs",
        "target": "ES2017",
        "lib": ["es2017", "esnext.asynciterable"],
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "src/setupTests.ts"
    ]
}